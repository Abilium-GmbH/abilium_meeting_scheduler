<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="send_guest_view_to_guest_wizardform" model="ir.ui.view">
            <field name="name">send_guest_view_to_guest.wizardform</field>
            <field name="model">send_guest_view_to_guest_wizard</field>
            <field name="arch" type="xml">
                <form string="Test" class="o_form_document">

                    <script>
                        $(document).ready(function(){
<!--                        $(".modal-header").hide();-->
                        $(".modal-footer").hide();
                        });
                    </script>
                    <sheet>
                        <group>
                            <group>
                                <field name="mail_address"/>
                            </group>

                            <group>
                                <button name="button_send_mail"
                                        string="Send Mail"
                                        class="btn-success" type="object"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_send_guest_view_to_guest_wizardform" model="ir.actions.act_window">
            <field name="name">Link Sender</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">send_guest_view_to_guest_wizard</field>
            <field name="view_mode">form</field>
<!--            <field name="view_id" ref="send_guest_view_to_guest_wizardform"/>-->
            <field name="target">new</field>
        </record>

    </data>
</odoo>
